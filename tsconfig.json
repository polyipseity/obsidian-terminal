{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2024"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "paths": {
      "obsidian": ["./node_modules/@polyipseity/obsidian/obsidian.d.ts"]
    },
    "resolveJsonModule": true,
    "rootDirs": ["assets", "scripts", "src", "tests"],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["assets/**/*", "scripts/**/*", "src/**/*"]
}
